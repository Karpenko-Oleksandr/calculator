<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--"
        android:textSize="44sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/zero_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="."
        android:id="@+id/point_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <Button
        app:layout_constraintLeft_toRightOf="@+id/point_button"
        app:layout_constraintRight_toLeftOf="@id/equal_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="0"
        android:id="@+id/zero_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <Button
        app:layout_constraintLeft_toRightOf="@+id/zero_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="="
        android:id="@+id/equal_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <Button
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/point_button"
        android:text="1"
        android:id="@+id/one_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <Button
        app:layout_constraintLeft_toRightOf="@+id/one_number"
        app:layout_constraintBottom_toTopOf="@id/point_button"
        android:text="2"
        android:id="@+id/two_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <Button
        app:layout_constraintLeft_toRightOf="@+id/two_number"
        app:layout_constraintBottom_toTopOf="@id/zero_button"
        android:text="3"
        android:id="@+id/three_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <Button
        app:layout_constraintLeft_toRightOf="@+id/three_number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/equal_button"
        android:text="+"
        android:id="@+id/plus_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <Button
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/one_number"
        android:text="4"
        android:id="@+id/four_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <Button
        app:layout_constraintLeft_toRightOf="@+id/four_number"
        app:layout_constraintBottom_toTopOf="@id/two_number"
        android:text="5"
        android:id="@+id/five_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <Button
        app:layout_constraintLeft_toRightOf="@+id/five_number"
        app:layout_constraintBottom_toTopOf="@id/three_number"
        android:text="6"
        android:id="@+id/six_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <Button
        app:layout_constraintLeft_toRightOf="@+id/six_number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/plus_button"
        android:text="-"
        android:id="@+id/minus_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <Button
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/four_number"
        android:text="7"
        android:id="@+id/seven_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <Button
        app:layout_constraintLeft_toRightOf="@+id/four_number"
        app:layout_constraintBottom_toTopOf="@id/five_number"
        android:text="8"
        android:id="@+id/eight_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <Button
        app:layout_constraintLeft_toRightOf="@+id/five_number"
        app:layout_constraintBottom_toTopOf="@id/six_number"
        android:text="9"
        android:id="@+id/nine_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <Button
        app:layout_constraintLeft_toRightOf="@+id/nine_number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/minus_button"
        android:text="*"
        android:id="@+id/multiply_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <Button
        android:text="Clear"
        android:id="@+id/clear_button"
        app:layout_constraintBottom_toTopOf="@id/seven_number"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/divide_button"
        android:layout_height="wrap_content" />

    <Button
        android:text="/"
        android:id="@+id/divide_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/nine_number"
        app:layout_constraintBottom_toTopOf="@id/multiply_button" />

    <Button
        android:id="@+id/reset_button"
        android:text="Reset"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divide_button"
        app:layout_constraintLeft_toRightOf="@id/nine_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>